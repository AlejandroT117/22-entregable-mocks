<h1>Añade un nuevo producto</h1>
<div class="row">
  <div class="col-md-6 mb-3">
    <form action="" method="post" id="form-new-product">
      <div class="form-group">
        <label for="nombre">Nombre del producto</label>
        <input class="form-control" name='nombre' type='text' id='nombre' required>
      </div>
      <div class="form-group">
        <label for="precio">Precio del producto</label>
        <input class="form-control" name='precio' id='precio' required type='number'>
      </div>
      <div class="form-group">
        <label for="img">URL a Imagen del Producto</label>
        <input class="form-control" name='img' required id='img' type='url' pattern="https://.*">
      </div>
      <div class="form-group">
        <label for="stock">Stock disponible</label>
        <input class="form-control" name='stock' type='number' id='stock' required>
      </div>
      <div class="form-group">
        <label for="stock">Código del producto</label>
        <input class="form-control" name='codigo' type='text' id='codigo' required>
      </div>
      <div>
        <button type="submit" class="btn btn-primary" id="send-new">Enviar</button>
      </div>
    </form>
  </div>
</div>

<hr>
