<h1>Centro de mensajes</h1>

<form action="" id="mensajes-form">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="nombre-msg">Tu nombre</label>
        <input type="text" name="nombre-msg" id="nombre-msg" placeholder="Escribe tu nombre" class="form-control">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="apellido-msg">Tu apellido</label>
        <input type="text" name="apellido-msg" id="apellido-msg" placeholder="Escribe tu apellido" class="form-control">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="edad-msg">Tu edad</label>
        <input type="text" name="edad-msg" id="edad-msg" placeholder="Escribe tu edad" class="form-control">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="email-msg">Tu correo</label>
        <input type="email" name="email-msg" id="email-msg" placeholder="Escribe tu correo" class="form-control">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="alias-msg">Tu alias</label>
        <input type="text" name="alias-msg" id="alias-msg" placeholder="Escribe tu alias" class="form-control">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="img-avatar">URL a Imagen de Avatar</label>
    <input class="form-control" name='img-avatar' required id='img-avatar' type='url' pattern="https://.*">
  </div>
  <div class="form-group">
    <label for="mensaje">Tu mensaje</label>
    <input type="text" name="mensaje" id="mensaje" class="form-control" placeholder="Escribe un mensaje">
  </div>
  <button type="submit" class="btn btn-primary" id="send-msg" name="send-msg">Enviar mensaje</button>

</form>

