<form action="/register" method="post">
  <h3>Regístrate</h3>

  {{> errors}}
  <div class="form-group">
    <label for="email">Tu email</label>
    <input
      class="form-control"
      name="email"
      type="email"
      id="email"
      placeholder="Escribe tu email"
      required
    />
  </div>
  <div class="form-group">
    <label for="email">Nombre</label>
    <input
      class="form-control"
      name="firstname"
      type="text"
      id="firstname"
      placeholder="Escribe tu nombre"
      required
    />
  </div>
  <div class="form-group">
    <label for="email">Apellido</label>
    <input
      class="form-control"
      name="lastname"
      type="text"
      id="lastname"
      placeholder="Escribe tu apellido"
      required
    />
  </div>
  <div class="form-group">
    <label for="nombre">Tu contraseña</label>
    <input
      class="form-control"
      name="pwd"
      type="password"
      id="pwd"
      placeholder="Escribe tu contraseña"
      required
    />
  </div>
  <div>
    <button type="submit" class="btn btn-primary" id="send-new">Enviar</button>
    <a href="/login">Ya tengo cuenta</a>
  </div>
</form>